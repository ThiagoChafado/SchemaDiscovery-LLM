{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer"
        },
        "nome": {
            "type": "string"
        },
        "preco": {
            "type": "number"
        },
        "em_estoque": {
            "type": "boolean"
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "dimensoes": {
            "type": "object",
            "properties": {
                "altura_cm": {
                    "type": "number"
                },
                "largura_cm": {
                    "type": "number"
                }
            },
            "required": [
                "altura_cm",
                "largura_cm"
            ]
        }
    },
    "required": [
        "dimensoes",
        "em_estoque",
        "id",
        "nome",
        "preco",
        "tags"
    ]
}